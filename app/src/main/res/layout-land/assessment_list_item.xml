<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="668dp"
        android:layout_height="145dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/light_teal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TableRow
                android:id="@+id/assessmentTitleRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/assessmentTitleLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/assessmentTitleLabel"
                    android:textColor="#616161"
                    tools:text="@string/assessmentTitleLabel" />

                <TextView
                    android:id="@+id/assessmentTitleView"
                    android:layout_width="533dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Assessment Title"
                    android:textAlignment="viewStart"
                    android:textColor="#090808"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/assessmentStartDateRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/assessmentStartDateLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/startDate"
                    android:textColor="#616161"
                    tools:text="@string/startDate" />

                <TextView
                    android:id="@+id/assessmentStartDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Assessment Start Date"
                    android:textAlignment="viewStart"
                    android:textColor="#090808"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/assessmentEndDateRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/assessmentEndDateLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/endDateLabel"
                    android:textColor="#616161"
                    tools:text="@string/courseEndLabel" />

                <TextView
                    android:id="@+id/assessmentEndDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Assessment End Date"
                    android:textAlignment="viewStart"
                    android:textColor="#090808"
                    android:textSize="16sp"
                    tools:text="@string/endDateLabel" />


            </TableRow>

            <TableRow
                android:id="@+id/assessmentTypeRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/typeLabel"
                    android:textColor="#616161"
                    tools:text="@string/typeLabel" />

                <TextView
                    android:id="@+id/assessmentTypeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Assessment Type"
                    android:textAlignment="viewStart"
                    android:textColor="#090808"
                    android:textSize="16sp"
                    tools:text="@string/typeLabel" />
            </TableRow>
        </TableLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>