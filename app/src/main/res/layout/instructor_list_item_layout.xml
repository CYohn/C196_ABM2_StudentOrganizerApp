<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/instructorLayout"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/instructorCardView"
        android:layout_width="322dp"
        android:layout_height="96dp"
        android:backgroundTint="@color/light_teal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/cardview_compat_inset_shadow"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/instructorNameCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor Name"
                android:textColor="#090808"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instructorEmailCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#090808"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/instructorPhoneCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#090808"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

