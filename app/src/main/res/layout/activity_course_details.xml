<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.CourseDetailsActivity">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="358dp"
        android:layout_height="509dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/courseTitleRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/courseTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/courseTitleLabel"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp"
                tools:text="@string/courseTitleLabel" />

            <EditText
                android:id="@+id/courseTitleEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/courseStartRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/courseStartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/courseStartLabel"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp"
                tools:text="@string/courseStartLabel" />

            <EditText
                android:id="@+id/courseStartEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/courseEndRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/courseEndLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/courseEndLabel"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp"
                tools:text="@string/courseEndLabel" />

            <EditText
                android:id="@+id/courseEndEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/courseStatusRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/courseStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp"
                tools:text="@string/courseStatusLabel" />

            <EditText
                android:id="@+id/courseStatusEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/courseInstructorRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/courseInstructorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/courseInstructorLabel"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp"
                tools:text="@string/courseInstructorLabel" />

            <EditText
                android:id="@+id/courseInstructorEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/buttonsRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="148dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <Button
            android:id="@+id/notesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="notesBtnPressed"
            android:text="Notes" />

        <Button
            android:id="@+id/assessmentsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="assessmentsBtnPressed"
            android:text="Assessments" />

        <Button
            android:id="@+id/AlertsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Alerts" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>