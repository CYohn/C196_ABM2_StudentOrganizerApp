<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.TermDetailsActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="348dp"
        android:layout_height="211dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/termTitleRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/termTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="Term Title:"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />

            <EditText
                android:id="@+id/termTitleEditTxt"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/termStartDateRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/termStartDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="Start Date: "
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />

            <EditText
                android:id="@+id/termStartDateEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/termEndDateRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TermEndDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="End Date: "
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />

            <EditText
                android:id="@+id/termEndDateEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:lineHeight="10dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/termSaveBtn"
        android:layout_width="129dp"
        android:layout_height="62dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="208dp"
        android:onClick="termSaveAndAddCourseBtn"
        android:text="@string/saveAndAddCourseBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>